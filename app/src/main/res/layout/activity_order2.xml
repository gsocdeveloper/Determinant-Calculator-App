<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prathameshshiralkar.apps.determinantcalculator.Order2">

    <ImageView
        android:id="@+id/about2"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="6dp"
        android:onClick="gotoabout"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@android:drawable/ic_dialog_info" />

    <TextView

        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button5"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-60dp"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/determinant" />

    <EditText
        android:id="@+id/o3_a1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/button5"
        android:layout_toLeftOf="@+id/button5"
        android:ems="10"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:nextFocusDown="@+id/o3_a2"/>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/o3_c3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="63dp"
            android:layout_toEndOf="@+id/o3_a2"
            android:layout_toRightOf="@+id/o3_a2"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/o3_a2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:nextFocusDown="@+id/o3_a3" />

        <EditText
            android:id="@+id/o3_a3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/o3_c3"
            android:layout_alignLeft="@+id/o3_c3"
            android:layout_alignBottom="@+id/o3_a2"
            android:ems="10"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:nextFocusDown="@+id/o3_b1" />
    </RelativeLayout>

    <EditText
        android:id="@+id/o3_c2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_alignStart="@+id/o3_b2"
        android:layout_alignLeft="@+id/o3_b2"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="62dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:nextFocusDown="@+id/o3_c3" />

    <EditText
        android:id="@+id/o3_c1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/o3_c2"
        android:layout_alignStart="@+id/o3_b1"
        android:layout_alignLeft="@+id/o3_b1"
        android:layout_alignBottom="@+id/o3_c2"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:nextFocusDown="@+id/o3_c2" />

    <EditText
        android:id="@+id/o3_b1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/o3_c1"
        android:layout_alignStart="@+id/o3_a1"
        android:layout_alignLeft="@+id/o3_a1"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:nextFocusDown="@+id/o3_b2" />

    <EditText
        android:id="@+id/o3_b2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/o3_b1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:nextFocusDown="@+id/o3_b3" />

    <EditText
        android:id="@+id/o3_b3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/o3_b2"
        android:layout_alignBottom="@+id/o3_b2"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:ems="10"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:nextFocusDown="@+id/o3_c1" />



    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:background="@color/colorPrimary"
        android:onClick="o3_cal"
        android:text="Calculate"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/o3_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="20dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-5644373101085191/8176400627" />


</RelativeLayout>
